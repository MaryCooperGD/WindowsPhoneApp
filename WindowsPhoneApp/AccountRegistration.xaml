<Page
    x:Class="WindowsPhoneApp.AccountRegistration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsPhoneApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="RegistrationTitle"
            HorizontalAlignment="Left" 
            Margin="52,24,0,0" 
            TextWrapping="Wrap" 
            Text="Now it's time to set your account!" 
            VerticalAlignment="Top" Height="40" Width="298"
            FontSize="20"/>
        <TextBox x:Name="UsernameBox"
            HorizontalAlignment="Left" 
                 Margin="10,137,0,0" 
                 PlaceholderText="Username" VerticalAlignment="Top" Width="380"/>
        <TextBox x:Name="PasswordBox"
            HorizontalAlignment="Left" 
                 Margin="10,239,0,0"
                 PlaceholderText="Password"
                 VerticalAlignment="Top" Width="380"/>
        <Button x:Name="ButtonSubmitUserPass"
            Content="Submit" 
                HorizontalAlignment="Left" 
                Margin="148,347,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
