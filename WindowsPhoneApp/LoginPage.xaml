<Page
    x:Class="WindowsPhoneApp.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsPhoneApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Style="{StaticResource Background}">

        <TextBlock x:Name="takenID"
                   Text="ID already taken!"
                   HorizontalAlignment="Center"
                   Margin="0,150,0,0"
                   FontSize="20"
                   Foreground="RosyBrown"
                   Visibility="Collapsed"
                   Style="{StaticResource TextColor}"/>
        <TextBox x:Name="UserID"
                 PlaceholderText="User ID"
                 Margin="10,180"
                 VerticalAlignment="Top"
                 Style="{StaticResource TextColorBox}"
                 />
        <PasswordBox x:Name="UserPSW"
                 PlaceholderText="Password"
                Margin="10,250"
                 VerticalAlignment="Top"
                     Foreground="Black"/>
        
        <Button x:Name="enterLoginButton"
                Content="Enter"
                Margin="0,20,0,0"
                Click="enter_login"
                Style="{StaticResource Buttons}"/>
    </Grid>
</Page>
